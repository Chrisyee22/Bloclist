<div class="container">

  <table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th>Title</th>
        <th>Quantity</th>
        <th>Completed</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td>
            <strong>
              <p><%= link_to item.title, item %></p>
            </strong>
          </td>
          <td class="text-info">
            <%= item.amount %>
          </td>
          <td class="check_box">
            <%= item.completed%>
          </td>
          <td>
            <%= link_to item_path(item), remote: true, method: :delete do %>
              <span class="glyphicon glyphicon-remove"></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
