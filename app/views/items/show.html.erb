<div class="container">

  <table class="table table-hover table-bordered">
    <thead>

    <tr>
      <th><h3>Item</h3</th>
      <th><h3>Amount</h3></th>
      <th><h3>In the cart</h3></th>
    </tr>
    </thead>
      <td>
        <strong><%= @item.title %></strong>
      </td>
      <td>
        <strong><%= @item.amount %></strong>
      </td>
      <td>
        <strong><%= @item.completed %></strong>
      </td>
    </div>
  </table>
  <div class="col-md-4">
    <%= link_to "Edit", edit_list_item_path(@item.list, @item), class: 'btn btn-success' %>
    <%= link_to "Delete Item", [@item.list, @item], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this Item?' } %>
  </div>
