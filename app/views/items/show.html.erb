<div class="container">


    <h1>Edit Item</h1>
    <div class="col-md-8">
      <%= form_for [@item.list, @item] do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title %>

        <%= f.label :amount %>
        <%= f.text_field :amount%>

        <%= f.label :completed %>
        <%= f.check_box :completed %>

        <%= f.submit "Save changes"%>
        <% end %>
    </div>

  <div class="col-md-4">
    <%= link_to "Edit", edit_list_item_path(@item.list, @item), class: 'btn btn-success' %>
    <%= link_to "Delete Item", [@item.list, @item], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this Item?' } %>
  </div>
